<odoo>
    <record id="bug_management_rule_manager" model="ir.rule">
        <field name="name">QA Manager can see all bugs</field>
        <field name="model_id" ref="model_bug_management"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
    </record>
    <record id="bug_management_rule_user" model="ir.rule">
        <field name="name">User can see their own reported bugs</field>
        <field name="model_id" ref="model_bug_management"/>
        <field name="domain_force">['|', ('reported_by_id', '=', user.id), ('assigned_to_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
