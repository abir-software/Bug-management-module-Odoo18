<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bug_dashboard_template">
        <t t-call="web.html_container">
            <t t-call="web.bug_dashboard_layout">
                <div class="container">
                    <h1>Bug Management Dashboard</h1>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    Bug Statistics
                                </div>
                                <div class="card-body">
                                    <p>Total Bugs: <t t-esc="bug_count"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>