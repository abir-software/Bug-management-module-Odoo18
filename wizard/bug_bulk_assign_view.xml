<odoo>
    <record id="view_bug_bulk_assign_wizard" model="ir.ui.view">
        <field name="name">bug.bulk.assign.wizard.form</field>
        <field name="model">bug.bulk.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Assign Bugs">
                <sheet>
                    <group>
                        <field name="bug_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="assignee_id" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Assign" type="object" name="action_assign_bugs" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>