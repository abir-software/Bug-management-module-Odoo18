<odoo>
    <record id="view_bug_bulk_assign_form" model="ir.ui.view">
        <field name="name">bug.bulk.assign.form</field>
        <field name="model">bug.bulk.assign</field>
        <field name="arch" type="xml">
            <form string="Bulk Assign Bugs">
                <sheet>
                    <group>
                        <field name="bug_ids" widget="many2many_tags"/>
                        <field name="user_id"/>
                    </group>
                    <footer>
                        <button string="Assign Selected Bugs" type="object" name="action_assign_bugs" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
